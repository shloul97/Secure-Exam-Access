{{!
    @template local/restrict

    This template renders summary information about a single quiz attempt.

    Example context (json):
    {

    }
}}

<div class="container">
    <div class="plugin-content">
        {{!
            @template local_restrict/header
        }}
        {{#header}}
            {{> local_restrict/header }}
        {{/header}}




        <div class="about">
            <span id="logs-area"></span>
            {{!
                @template local_restrict/forms
            }}
            {{#form}}
                <div class="row">
                    <div class="col-12">
                        <div class="container labs-container mt-3">
                            <div class="title mt-3">
                                <h4>
                                    Devices Filter:
                                </h4>
                            </div>
                            <div class="filter-content mt-3">
                                {{> local_restrict/forms}}
                            </div>
                        </div>
                    </div>
                </div>
            {{/form}}


            {{!
                @template local_restrict/update_table
            }}

                <div class="row">
                    <div class="col-12">
                        <div class="container labs-container mt-3">
                            <div class="table-content">
                                <input type="hidden" id="sesskey" value="{{sesskey}}">
                                {{#table}}
                                    {{> local_restrict/update_table}}
                                {{/table}}
                            </div>
                        </div>
                    </div>
                </div>

        </div>
    </div>
</div>



